<%= form_with(model: List.new, remote: true, class: "list_form card mb-5") do |form| %>
	
	<div class="input-group">
		<%= form.label :title, class: 'sr-only' %>
		<%= form.text_field :title, class: "form-control", title: 'List title', placeholder: 'TODO list title', required: true  %>
		<div class="input-group-append">
			<%= form.hidden_field :user_id, :value => user.id %>
			<%= form.submit "Create List", :disable_with => 'Creating...', class: 'btn btn-primary' %>
		</div>
	</div>

	<%- if flash[:error] %>
		<% flash[:error].each do |msg| %>
			<small class="form-text text-danger">
				<%= msg %>
			</small>
		<% end %>
	<% end %>

<% end %>